{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ note.body }}</td>
            </tr>
            <tr>
                <th>CreateDt</th>
                <td>{{ note.createDt ? note.createDt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDt</th>
                <td>{{ note.updateDt ? note.updateDt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_note_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('app_note_edit', {'id': note.id}) }}">edit</a>

    {{ include('note/_delete_form.html.twig') }}
{% endblock %}
